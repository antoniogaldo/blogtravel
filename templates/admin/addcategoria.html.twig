{% extends 'baseadmin.html.twig' %}
{% block title %}Admin{% endblock %}
{% block body %}
{% if app.session.flashBag.has('success') %}
   <div class="alert alert-success alert-dismissible">
     <a class="close" data-dismiss="alert" aria-label="close">×</a>
     {% for msg in app.session.flashBag.get('success') %}
     {{ msg }}
     {% endfor %}
   </div>
   {% elseif app.session.flashBag.has('notsuccess') %}
   <div class="alert alert-danger alert-dismissable">
     <a class="close" data-dismiss="alert" aria-label="close">×</a>
     {% for msg in app.session.flashBag.get('notsuccess') %}
     {{ msg }}
     {% endfor %}
{% endif %}
<table id="example1" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>Data</th>
      <th>Azione</th>
    </tr>
  </thead>
  <tbody>
    {% for c in categoria %}
    <tr>
      <td>{{c.id}}</td>
      <td>{{c.nome}}</td>
      <td>{{c.data|date("d/m/Y")}}</td>
      <td>
        <a class="btn btn-danger btn-xs" href="{{ path('deletecategoria', { id: c.id }) }}">elimina categoria</a>
        <a class="btn btn-info btn-xs" href="{{ path('editcategoria', { id: c.id }) }}">modifica categoria</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<h2>Lista Categoria</h2>
<h2 class="page-header"></h2>
  {{ form_start(form) }}
  <div class="form-group">
      {{ form_row(form.nome, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="form-group">
      {{ form_row(form.data, {'attr': {'class': 'form-control'}}) }}
  </div>
      <button type="submit" class="btn btn-info">Aggiungi</button>
  {{ form_end(form) }}
{% endblock %}
