{% extends 'base.html.twig' %}
{% block title %}Hello!{% endblock %}
{% block body %}
  <!-- start banner Area -->
	{% if home %}
			<section class="banner-area relative" id="home" data-parallax="scroll" data-image-src="{{ asset('uploads/image/' ~ home.image) }}">
				<div class="overlay-bg overlay"></div>
				<div class="container">
					<div class="row fullscreen">
						<div class="banner-content d-flex align-items-center col-lg-12 col-md-12">
							<h1><a class="title" href="{{ path('articolisite', { id: home.id }) }}">{{home.titolo|capitalize}}</a></h1>
						</div>
						<div class="head-bottom-meta d-flex justify-content-between align-items-end col-lg-12">
							<div class="col-lg-6 flex-row d-flex meta-left no-padding">
								<p><span class="lnr lnr-heart"></span> 15 Likes</p>
								<p><span class="lnr lnr-bubble"></span> {{ likecommenti|length }}{% if likecommenti|length == 1  %}&nbsp;&nbsp;Commento{% else %}&nbsp;&nbsp;Commenti{% endif %}</p>
							</div>
							<div class="col-lg-6 flex-row d-flex meta-right no-padding justify-content-end">
								<div class="user-meta">
									<h4 class="text-white">{{home.autore|upper}}</h4>
									<p class="text-white">{{home.data|date("j F Y")}}</p>
								</div>
								<img class="img-fluid user-img" src="img/user.jpg" alt="">
							</div>
						</div>
					</div>
				</div>
			</section>
			{% endif %}
			<!-- End banner Area -->
			<!-- Start travel Area -->
			<section class="travel-area section-gap" id="news">
				<div class="container">
					<div class="row d-flex justify-content-center">
						<div class="menu-content pb-70 col-lg-8">
							<div class="title text-center">
								<h1 class="mb-10">Ultimi Articoli</h1>
								<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore  et dolore magna aliqua.</p>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12 travel">
							{% for a in articoli %}
							<div class="col-md-6 single-travel media">
								<div class="col-md-6">
							  <img class="img-fluid d-flex  mr-3" src="{{ asset('uploads/image/' ~ a.image) }}" alt="">
							</div>
							  <div class="dates">
							  	<span>{{a.data|date("j")}}</span>
							  	<p class="white">{{a.data|date("F")}}</p>
							  </div>
							  <div class="media-body align-self-center">
							    <h4 class="mt-0"><a href="{{ path('articolisite', { id: a.id }) }}">{{a.titolo|capitalize}}</a></h4>
							    <p>{{a.articolo|slice(0,80)|raw}}...</p>
								<div class="meta-bottom d-flex justify-content-between">
									<p><span class="lnr lnr-heart"></span> 15 Likes</p>
									<p><span class="lnr lnr-bubble"></span> 02 Comments</p>
								</div>
							  </div>
							</div>
							{% endfor %}
					</div>
					<a href="#" class="primary-btn load-more pbtn-2 text-uppercase mx-auto mt-60">Load More </a>
				</div>
			</section>
			<!-- End travel Area -->
			<!-- Start category Area -->
			<section class="category-area section-gap" id="categorie">
				<div class="container">
					<div class="row d-flex justify-content-center">
						<div class="menu-content pb-40 col-lg-8">
							<div class="title text-center">
								<h1 class="mb-10">Categorie</h1>
								<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore  et dolore magna aliqua.</p>
							</div>
						</div>
					</div>
					<div class="active-cat-carusel">
						{% for c in categoria %}
						<div class="item single-cat">
							<a href="{{ path('categoriasite', { id: c.id }) }}"><img src="{{ asset('uploads/image/' ~ c.image) }}" alt="{{c.nome|capitalize}}"></a>
							<p class="date">{{c.data|date("j F Y")}}</p>
							<h4><a href="{{ path('categoriasite', { id: c.id }) }}">{{c.nome|capitalize}}</a></h4>
						</div>
						{% endfor %}
					</div>
				</div>
			</section>
			<!-- End category Area -->
{% endblock %}
