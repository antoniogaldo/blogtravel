<!-- Start post Area -->
    <div class="post-wrapper pt-80">
        <!-- Start post Area -->
        <section class="post-area">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="single-page-post">
                            <img class="img-fluid" src="{{ asset('uploads/image/' ~ articoli.image) }}" alt="">
                            <div class="top-wrapper ">
                                <div class="row d-flex justify-content-between">
                                    <h2 class="col-lg-8 col-md-12 text-uppercase">
                                        {{articoli.titolo}}
                                    </h2>
                                    <div class="col-lg-4 col-md-12 right-side d-flex justify-content-end">
                                        <div class="desc">
                                           <h2>{{articoli.autore|upper}}</h2>
                                            <h3>{{articoli.data|date("j F Y")}}</h3>
                                        </div>
                                        <div class="user-img">
                                            <img src="img/user.jpg" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tags">
                                <ul>
																	{% for a in articoli.tags %}
                                    <li><a href="#">{{a}}</a></li>
																	{% endfor %}
                                </ul>
                            </div>
                            <div class="single-post-content">
                                {{articoli.articolo|raw}}
                            </div>
                            <!-- Start commentform Area -->
														{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <section class="commentform-area  pb-120 pt-80 mb-100">
                                <div class="container">
                                    <h5 class="text-uppercas pb-50">Commenta articolo</h5>
                                    <div class="row flex-row d-flex">
                                        <div class="col-lg-6">
																					{{ form_start(form) }}
																					<div class="form-group">
																							{{ form_row(form.commenti, {'attr': {'class': 'form-control common-input mb-10'}}) }}
																					</div>
																					<div class="form-group">
																							{{ form_row(form.likecomment, {'attr': {'class': 'form-control common-input mb-10'}}) }}
																					</div>
																						<button type="submit" class="primary-btn">Commenta</button>
																				{{ form_end(form) }}
                                    </div>
                                </div>
                            </section>
														{% else %}
														<h5 class="text-uppercas pb-50">Se vuoi commentare l'articolo registrati</h5>
														<a class="dropdown-item"><a href="{{ path('register') }}">Registrati</a>
														{% endif %}
                            <!-- End commentform Area -->

                        </div>
                    </div>
                    <div class="col-lg-4 sidebar-area ">
                        <div class="single_widget search_widget">
                            <div id="imaginary_container">
